<li id="news_<%= news.id %>">
<% if permitted_to? :destroy, news %>
      <%= link_to_remote "<span>" + t('destroy') + "</span>", :url => news_destroy_path(:format => 'js', :id => news.id, :course_id => news.course.id), :confirm => t('a_u_s'), :html => {:class => 'icon-link icon-sprite-destroy'}
%>
  <% end %>
  <%= textile news.content %>
</li>
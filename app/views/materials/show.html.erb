<% title @material.name %>
<% if permitted_to? :edit, @material %>
	<% nav icon_link(t('edit'), material_other_path(:action => 'edit'), 'edit') %>
<% end %>
<% if permitted_to? :destroy, @material %>
	<% nav icon_link(t('destroy'), material_other_path(:action => 'destroy'), 'destroy', t('a_u_s')) %>
<% end %>

<div class="content">
  <%= textile @material.content %>
</div>

<% if @material.assets.count > 0 %>
  <p class="delimiter"><span><%= t('attached_files') %></span></p>
	<div class="attachment_list">
		<%= render :partial => "attachment", :collection => @material.assets, :locals => {:keep => false} %>
	</div>
<% end %>